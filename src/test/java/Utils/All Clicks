//
public void clickIfExists(By locator) {
    List<WebElement> elements = driver.findElements(locator);
    if(!elements.isEmpty()) {
        elements.get(0).click();
        System.out.println("✅ Click ho gaya");
    } else {
        System.out.println("⏭️ Element nahi mila, skip...");
    }
}
